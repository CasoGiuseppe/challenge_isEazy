{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["./src/app/ui/*"],
      "@router/*": ["./src/app/router/*"],
      "@shared/*": ["./src/app/shared/*"],
      "@assets/*": ["./src/assets/*"],
      "@domains/*": ["./src/domains/*"],
      "@tests/*": ["./src/app/shared/tests/*"],
    },
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom",
      "es2015.collection"
    ]
  }
}
