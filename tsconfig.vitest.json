{
  "extends": "./tsconfig.app.json",
  "exclude": [],
  "compilerOptions": {
    "composite": true,
    "lib": [
      "es5",
      "es6",
      "es7",
      "es2017",
      "dom",
      "es2015.collection"
    ],
    "types": ["node", "jsdom"],
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["./src/app/ui/*"],
      "@router/*": ["./src/app/router/*"],
      "@shared/*": ["./src/app/shared/*"],
      "@assets/*": ["./src/assets/*"],
      "@domains/*": ["./src/domains/*"],
      "@tests/*": ["./src/app/shared/tests/*"],
    }
  }
}
